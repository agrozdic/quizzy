<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtRangStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_weight="1"
        android:text="Rang Statistics"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnWeek"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Week" />

        <Button
            android:id="@+id/btnMonth"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Month" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp">

        <ImageView
            android:id="@+id/imgFriend1"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textFriend1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Friend 1"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textFriend1Stars"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="10 ⭐"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp">

        <ImageView
            android:id="@+id/imgFriend2"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textFriend2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Friend 2"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textFriend2Stars"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="9 ⭐"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp">

        <ImageView
            android:id="@+id/imgFriend3"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textFriend3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Friend 3"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textFriend3Stars"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="8 ⭐"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>